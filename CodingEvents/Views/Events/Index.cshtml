@{
}
@using CodingEvents.Models;
@model List<Events>


<h1>Coding Events</h1>
@* Inside Events/Index View *@
<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>     

@if (Model.Count == 0)
{
    <p>No events yet!</p>
}   
else
{
   <table class = "table">
       <tr>
           <th>
               Id
           </th>
           <th>
               Name
           </th>
           <th>
               Description
           </th>
            <th>
               Contact Email
            </th>          
            <th>
                Event Type
            </th>
       </tr>

    @foreach (var e in Model)
    {
       <tr>
           <td>@e.Id</td>
           <td>@e.Name</td>
           <td>@e.Description</td>
           <td>@e.ContactEmail</td>
           <td>@e.Type</td>
           <td><a asp-controller="Events" asp-action="Edit" asp-route-id="@e.Id">Edit Event</a></td>
       </tr>
    }
    </table>
}



